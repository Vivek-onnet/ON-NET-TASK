<odoo>
<!--create wizard folder with __init__.py , student_fees_update_wizard.py and student_fees_update_wizard_view.xml.
-   The wizard model should inherit from 'models.TransientModel'  in .py file of the related model.
-   Add 'from . import models' in __init__.py.
-   Add `from . import wizard' in the __init__.py of the related model .
-   Add 'data': ['wizard/student_fees_update_wizard_view.xml', ] in __manifest__.py file.-->


<!--     Define the form view for the wizard-->
    <data>
        <record id="student_fees_update_from_view_wiz" model="ir.ui.view">
            <field name="name">Student Fees Update Wizard</field>
            <field name="model">student.fees.update.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="total_fees"/>
                        </group>
                    </group>
                    <footer>
                        <button name="update_student_fees" string="Update Fees" type="object" class="oe_highlight"/>
                        <button special="cancel" string="Cancel" class="btn btn-secondary"/>
                    </footer>
                </form>
            </field>
        </record>

<!--         Define an action to open the wizard. Its use for ACTION BUTTON.-->
        <record id="student_fees_update_action" model="ir.actions.act_window">
            <field name="name">Student Fees Update</field>
            <field name="res_model">student.fees.update.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>



<!--         Define Window action to open the wizard using menu item.-->
        <record id="student_fees_update_action_window" model="ir.actions.act_window">
            <field name="name">Student Fees Update</field>
            <field name="res_model">student.fees.update.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="school_student.student_fees_update_from_view_wiz"/>
            <field name="target">new</field> <!-- "target = new" use for wiz. open in new page // if we use "target = current" use for wiz. open in current page-->
            <field name="binding_model_id" ref="model_school_student"/> <!-- binding model id use for define on which model the action should be triggered  -->
            <field name="binding_view_types">list,form</field>  <!-- binding_view_types use for define on which type of page of the model the action should be triggered  -->
        </record>


<!--    Link the action to a menu item if necessary.-->
<!--        This is a menu item in the main menu which give access to the action for updating fees.-->
        <menuitem name="Student Fees Update" id="menu_student_fees_update" parent="school_student.menu_1"
                action="school_student.student_fees_update_action_window"/>
    </data>
</odoo>

