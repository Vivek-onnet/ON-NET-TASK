<odoo>
    <record id="cron_customer_reminder" model="ir.cron">
        <field name="name">Customer Reminder</field>
        <field name="model_id" ref="school_student.model_school_student"/> <!-- Ensure this references the correct model -->
        <field name="state">code</field>
        <field name="code">model.send_reminder()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">minutes</field> <!-- Set to run every 5 minutes -->
        <field name="numbercall">1</field> <!-- Run indefinitely -->
        <field name="doall">True</field> <!-- Run missed jobs after server downtime -->
        <field name="nextcall">2024-08-13 07:53:26</field> <!-- Set the first execution time -->
    </record>
</odoo>