<odoo>

    <data>

        <!-- explicit list view definition of STUDENT -->

        <record model="ir.ui.view" id="school_student.list">
            <field name="name">school_student list</field>
            <field name="model">school.student</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="roll_no"/>
                    <field name="name"/>
                    <field name="school_id"/>
                    <field name="virtual_class"/>
                    <field name="school_address"/>
                    <field name="gender"/>
                    <field name="age"/>

                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="school_student.form">
            <field name="name">school_student form</field>
            <field name="model">school.student</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
<!--                    <header>-->

<!--&lt;!&ndash;                        <button name="read_group_orm" string="check client action" type="object" class="oe_highlight"/>&ndash;&gt;-->

<!--                        &lt;!&ndash;            This is an OBJECT button , which will open the wizard               &ndash;&gt;-->
<!--                        <button name="wiz_open" string="wiz open" type="object" class="oe_highlight"/>-->
<!--                        <button name="print_custom_report" string="BONOFIDE" type="object" />-->

                        <!--         This is an ACTION button , which will open the wizard   -->
<!--                        <button name="school_student.student_fees_update_action" string="wiz open using Action"-->
<!--                                type="action" class="oe_highlight"/>-->

<!--                    </header>-->
<!--                    <field name="image" widget="image" class="oe_avatar"/>-->
                    <group>
                        <group>
                            <field name="roll_no"/>
                            <field name="name"/>
                            <!--                  <field name="city" string="School City" />-->
                            <!--                  widget="selection" options="{'no_create': True , 'no_open': True}"-->
                            <field name="school_id" string="School list"
                                   domain="[('virtual_class', '=', True) , ('school_type', '!=', False)]"/>  <!--  domain use for filter in Many2One field, domain = [('model's_field_name', 'condition / operator (=,!=,>,<,<=,>=)', 'value')] -->
                            <!--  Options {Dictionary} use for give choice in field , here we stop create new record in Many2One field by using "no_create" = True and 'no_open' = True use for not open record in pop up -->
                            <!--  widget="selection" use for Make selection type of field -->
                            <field name="hobby_list" string="Hobby" widget="many2many_tags"/>
                            <field name="gender" string="Gender"/>
                        </group>
                        <group>
                            <field name="bdate" invisible="student_fees == 0" readonly="student_fees == 1200"
                                   required="student_fees == 2000"/>
                            <field name="age"/>
                            <field name="student_fees"/>
                            <field name="currency_id" string="Currency" invisible="1"/>
                            <field name="total_fees" widget="monetary"/>
                            <field name="active"/>
                        </group>
                    </group>
                    </sheet>
                </form>
            </field>
        </record>

    <record id="school_student.kanban" model="ir.ui.view">
            <field name="name">school_student kanban</field>
            <field name="model">school.student</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile">
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_content oe_kanban_global_click" >

                                <div class="row">
                                    <div class="col-6">
                                        <strong>Name : </strong>
                                        <field name="name" string="Student Name"/>
                                    </div>

                                    <div class="col-8">
                                        <strong>School Name : </strong>
                                        <field name="school_id" string="School Name"/>
                                    </div>


                                    <div class="col-8">
                                        <strong>DOB : </strong>
                                        <field name="bdate"/>
                                    </div>

                                    <div class="col-6">
                                        <strong>Age : </strong>
                                        <field name="age">Age</field>
                                    </div>



                                    <div class="col-6">
                                        <span class="float-end"><field name="image" widget="image" class="oe_avatar"></field>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>




        <!-- explicit list view definition of HOBBY -->

        <record model="ir.ui.view" id="hobby_list">
            <field name="name">Hobby Tree</field>
            <field name="model">hobby</field> <!--  model name  should be same as DATABASE table name -->
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>


                </tree>
            </field>
        </record>


        <record model="ir.ui.view" id="hobby_form_view">
            <field name="name">hobby.form.view</field>
            <field name="model">hobby</field>
            <field name="arch" type="xml">
                <form>

                    <group>
                        <group>
                            <field name="name"/>
                            <field name="selection"/>
                            <field name="partner_name" string="Partner Name"/>
                            <!--                  <field name="bdate" invisible = "student_fees == 0"  readonly = "student_fees == 1200" required = "student_fees == 2000"  />-->

                            <field name="partner2_name" invisible="selection == 'one'" required="selection == 'two'"/>
                        </group>
                    </group>
                </form>
            </field>
        </record>

        <!--    """################  VIEW INHERITANCE : ################"""  -->

        <!--    View Inheritance:   -->
        <!-- After create the inherited model class named "SchoolProfile" in models.py
                                    then  make proper views for this inherited model in views.xml of this module.-->

        <record model="ir.ui.view" id="school_extend_form">
            <field name="name">school_extended form</field>
            <field name="model">school.profile</field> <!--  model name  should be same as DATABASE table name -->
            <field name="inherit_id" ref="school.school_form_view"/>
            <field name="arch" type="xml">

                <field name="description" position="after">

                    <field name="school_list" groups="school.access_student_high_user_group">
                        <tree>
                            <field name="name" string="Name"/>
                            <field name="gender"/>

                        </tree>
                        <form>
                            <group>
                                <field name="name" string="Name"/>
                                <field name="school_id" string="School Name" />

                            </group>
                        </form>
                    </field>
                </field>

            </field>
        </record>

<!--  """################  WINDOWS ACTIONS : ################"""  -->

    <!-- Purpose: Most common action type; used to present model views (e.g., list, form).-->

            <!-- res_model: The model to present views for.-->
            <!-- view_mode : define specific page type for view. -->
            <!-- res_id (optional): Specifies the record to load if the default view is form.-->
            <!-- search_view_id (optional): Custom search view to load.-->
            <!-- target (optional): Specifies whether to open in the main area, full screen, or dialog. -->
            <!-- context (optional): Additional context data.-->
            <!-- domain (optional): Filtering domain for view queries.-->
            <!-- limit (optional): Number of records to display by default.-->

        <!-- window actions of STUDENT -->
        <record model="ir.actions.act_window"
                id="school_student.action_window">  <!--  model="ir.actions.act_window" use for define action of view &&& id should be same in menuitem -->
            <field name="name">School Student Window</field>
            <field name="res_model">school.student</field> <!-- res_model name should be also same as DATABASE table name -->
            <field name="view_mode">kanban,tree,form</field>
        </record>

        <!-- actions of HOBBY -->

        <record model="ir.actions.act_window"
                id="hobby_action_window">  <!--  model="ir.actions.act_window" use for define action of view -->
            <field name="name">Hobby Window</field>
            <field name="res_model">hobby</field> <!-- res_model name should be also same as DATABASE table name -->
            <field name="view_mode">tree,form</field>
        </record>


