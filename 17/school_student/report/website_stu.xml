<odoo>
    <template id="portal_my_home_student" name="Student Portal" customize_show="True"
              inherit_id="portal.portal_my_home">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <t t-call="portal.portal_docs_entry">
                <t t-set="title">Students Portal</t>
                <t t-set="icon" t-value="'/purchase/static/src/img/rfq.svg'"/>
                <t t-set="text">Follow your Requests for Quotation</t>
                <t t-set="url" t-value="'/my/students'"/>
                <t t-set="placeholder_count" t-value="'student_counts'"/>
            </t>
        </xpath>
    </template>

    <template id="portal_breadcrumbs" inherit_id="portal.portal_breadcrumbs">
        <xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
            <li t-if="page_name == 'student_list_view'" class="breadcrumb-item">Students</li>
            <li t-if="page_name == 'student_registration_view'" class="breadcrumb-item">Registration</li>
            <li t-if="page_name == 'student_form_view'" class="breadcrumb-item">
                <a href="/my/students">Students</a>
                /
                <t t-out="student.name"/>
            </li>

        </xpath>

    </template>

    <template id="student_registration_form">
        <t t-call="portal.portal_layout">
            <t t-call="portal.portal_table">
                <div class="card mb-4  text-center "
                     style=" border-radius: 15px 15px 15px 15px; background-color: #97e9f0 ">
                    <div class="card-body text-center">
                        <form method="post">

                            <div class="form-group row">
                                <label for="name" class="col-sm-2 col-form-label">Name</label>
                                <div class="col-sm-10">
                                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

                                    <input type="char" class="form-control" id="name" placeholder="Enter Student Name" name="name"
                                           style=" border-radius: 15px 15px 15px 15px; background-color: #000000 ;  border-color: #97e9f0;"/>
                                </div>
                            </div>
                            <br/>
                            <div class="form-group row">
                                <label for="name" class="col-sm-2 col-form-label">School</label>
                                <div class="col-sm-10">
                                    <select name="school" id="school" type="char" class="form-control"
                                            placeholder="Enter Student name"
                                            style=" border-radius: 15px 15px 15px 15px; background-color: #000000 ;  border-color: #97e9f0;">
                                        <option value=""></option>
                                        <t t-foreach="schools" t-as="school">
                                            <option t-att-value="school.id">
                                                <t t-out="school.name"/>
                                            </option>
                                        </t>
                                    </select>
                                </div>
                            </div>
                            <br/>
                            <div class="form-group row">
                                <label for="name" class="col-sm-2 col-form-label">Date of Birth</label>
                                <div class="col-sm-10">
                                    <input type="date" class="form-control" id="bdate" placeholder="Enter Date of Birth" name="bdate"
                                           style=" border-radius: 15px 15px 15px 15px; background-color: #000000 ;  border-color: #97e9f0;"/>
                                </div>
                            </div><br/>

                            <div class="form-group row">
                                <div class="col-sm-10">
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                </div>
                            </div>
                            <br/>
                        </form>
                    </div>
                </div>
            </t>
        </t>

    </template>


    <template id="portal_students_list">
        <t t-call="portal.portal_layout">
            <t t-call="portal.portal_table">
                <button class="btn btn-primary" style="float: right; margin-bottom: 40px">
                    <a href="/my/students/add">Add Student</a>
                </button>

                <thead>
                    <tr class="text-center">
                        <th>Roll No</th>
                        <th>Student Name</th>
                        <th>School</th>
                        <th>DOB</th>
                        <th>Age</th>
                    </tr>
                </thead>
                <tbody>
                    <t t-foreach="students" t-as="student">
                        <tr class="text-center">
                            <td class="text-center" style="color:blue;">
                                <a t-attf-href="/my/students/#{student.id}">
                                    <t t-out="student.roll_no"/>
                                </a>
                            </td>
                            <td class="text-center">
                                <t t-out="student.name"/>
                            </td>
                            <td class="text-center">
                                <t t-out="student.school_id.name"/>
                            </td>

                            <td class="text-center">
                                <t t-out="student.bdate"/>
                            </td>
                            <td class="text-center">
                                <t t-out="student.age"/>
                            </td>
                        </tr>
                    </t>
                </tbody>
            </t>
        </t>
    </template>

    <template id="portal_students_form" inherit_id="portal.portal_sidebar">

        <xpath expr="//div[hasclass('o_portal_sidebar')]" position="inside">
            <t t-if="page_name == 'student_form_view'">
                <!--                <p><strong>Name: </strong> <span t-out="student.name"/></p>-->
                <!--                <p><strong>Roll No:</strong> <span t-esc="student.roll_no"/></p>-->
                <!--            <p><strong>Birthdate:</strong> <span t-esc="student.bdate"/></p>-->
                <!--            <p><strong>Age:</strong> <span t-esc="student.age"/></p>-->
                <!--            <p><strong>School:</strong> <span t-esc="student.school_id.name"/></p>-->
                <section>
                    <div class="container py-5">
                        <div class="row">
                            <div class="col-lg-4">
                                <div class="card mb-4 "
                                     style=" border-radius: 15px 15px 15px 15px; background-color: #97e9f0 ">
                                    <div class="card-body text-center">
                                        <br/>
                                        <img t-att-src="image_data_uri(student.image)"
                                             alt="avatar"
                                             class="rounded-circle " style="width: 150px; height: 150px"/>
                                        <h5 class="my-3">
                                            <t t-out="student.name"/>
                                        </h5>
                                        <p class="text-muted mb-1">
                                            <t t-out="student.school_id.name"/>
                                        </p>
                                        <a t-attf-href="/my/students/print/{{student.id}}">Download</a>

                                        <div class="d-flex justify-content-center mb-2">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-8 order-1 order-lg-2">
                                <div class="card mb-3.5"
                                     style=" border-radius: 15px 15px 15px 15px; background-color: #97e9f0 ">
                                    <div class="card-body">
                                        <br/>
                                        <div class="row">
                                            <div class="col-sm-3">
                                                <p class="mb-0">Full Name</p>
                                            </div>
                                            <div class="col-sm-9">
                                                <p class="text-muted mb-0">
                                                    <t t-out="student.name"/>
                                                </p>
                                            </div>
                                        </div>
                                        <hr/>
                                        <div class="row">
                                            <div class="col-sm-3">
                                                <p class="mb-0">School Name</p>
                                            </div>
                                            <div class="col-sm-9">
                                                <p class="text-muted mb-0">
                                                    <t t-out="student.school_id.name"/>
                                                </p>
                                            </div>
                                        </div>
                                        <hr/>
                                        <div class="row">
                                            <div class="col-sm-3">
                                                <p class="mb-0">Roll no.</p>
                                            </div>
                                            <div class="col-sm-9">
                                                <p class="text-muted mb-0">
                                                    <t t-out="student.roll_no"/>
                                                </p>
                                            </div>
                                        </div>
                                        <hr/>
                                        <div class="row">
                                            <div class="col-sm-3">
                                                <p class="mb-0">DOB</p>
                                            </div>
                                            <div class="col-sm-9">
                                                <p class="text-muted mb-0">
                                                    <t t-out="student.bdate"/>
                                                </p>
                                            </div>
                                        </div>
                                        <hr/>
                                        <div class="row">
                                            <div class="col-sm-3">
                                                <p class="mb-0">Age</p>
                                            </div>
                                            <div class="col-sm-9">
                                                <p class="text-muted mb-0">
                                                    <t t-out="student.age"/>
                                                </p>
                                            </div>
                                        </div>
                                        <br/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>


            </t>
        </xpath>
    </template>


</odoo>