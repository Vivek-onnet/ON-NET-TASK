<odoo>

    <template id="portal_my_home_student_website" name="Student Website" customize_show="True"
              inherit_id="portal.portal_my_home">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <t t-call="portal.portal_docs_entry">
                <t t-set="title">Students Website</t>
                <t t-set="icon" t-value="'/purchase/static/src/img/calculator.svg'"/>
                <t t-set="text">Follow your Requests for Quotation</t>
                <t t-set="url" t-value="'/my/school_student'"/>
                <t t-set="placeholder_count" t-value="'student_counts'"/>
            </t>
        </xpath>
    </template>

    <template id="student_web_template">
        <link rel="stylesheet" type="text/css" href="/school_student/static/css/style.css"/>
        <t t-call="website.layout" t-lang="en_US">
            <div id="wrap" class="classic-background">
                <!-- Custom Container with Animated Background -->
                <div class="student-card-box animated-card container-custom">
                    <div class="container-custom animated-background">
                        <h1 class="text-stylish">Welcome to Our School</h1>
                        <div class="text-stylish">
                            <h1 class="animated-header">Student Information</h1>
                            <br/>
                            <h4 class="animated-subheader">Your future starts here</h4>
                        </div>
                    </div>
                    <br/>
                    <br/>
                    <br/>

                    <!--                <div class="container-custom animated-background">-->

                    <t t-set="counter" t-value="0"/>

                    <t t-foreach="model_school_student" t-as="doc">
                        <t t-set="counter" t-value="counter + 1"/>

                        <div class="student-info mb32">
                            <div class="row text-stylish">
                                <t t-if="counter % 2 == 0">
                                    <div class="col-md-6">
                                        <div class="student-card animated-card">
                                            <h3>Name:
                                                <t t-esc="doc.name"/>
                                            </h3>
                                            <h6>
                                                <p>Roll No:
                                                    <t t-esc="doc.roll_no"/>
                                                </p>
                                                <p>Class:
                                                    <t t-esc="doc.virtual_class"/>
                                                </p>
                                                <p>School:
                                                    <t t-esc="doc.school_id.name"/>
                                                </p>
                                                <p>Address:
                                                    <t t-esc="doc.school_address"/>
                                                </p>
                                                <p>Gender:
                                                    <t t-esc="doc.gender"/>
                                                </p>
                                                <p>Age:
                                                    <t t-esc="doc.age"/>
                                                </p>
                                            </h6>
                                        </div>
                                    </div>
                                    <div class="col-md-6 text-center">
                                        <img t-if="doc.image"
                                             t-att-src="image_data_uri(doc.image)"
                                             alt="Student Photo"
                                             class="img-fluid student-card animated-card"
                                             style="max-width: 550px;"/>
                                        <img t-if="not doc.image"
                                             src="https://cdn-icons-png.flaticon.com/512/2602/2602414.png"
                                             alt="No Image"
                                             class="img-fluid img-animate rounded-circle"
                                             style="max-width: 150px;"/>
                                    </div>
                                </t>
                                <t t-else="">
                                    <div class="col-md-6 text-center">
                                        <img t-if="doc.image"
                                             t-att-src="image_data_uri(doc.image)"
                                             alt="Student Photo"
                                             class="img-fluid student-card animated-card"
                                             style="max-width: 550px;"/>
                                        <img t-if="not doc.image"
                                             src="https://cdn-icons-png.flaticon.com/512/2602/2602414.png"
                                             alt="No Image"
                                             class="img-fluid img-animate rounded-circle"
                                             style="max-width: 150px;"/>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="student-card animated-card">
                                            <h3>Name:
                                                <t t-esc="doc.name"/>
                                            </h3>
                                            <h6>
                                                <p>Roll No:
                                                    <t t-esc="doc.roll_no"/>
                                                </p>
                                                <p>Class:
                                                    <t t-esc="doc.virtual_class"/>
                                                </p>
                                                <p>School:
                                                    <t t-esc="doc.school_id.name"/>
                                                </p>
                                                <p>Address:
                                                    <t t-esc="doc.school_address"/>
                                                </p>
                                                <p>Gender:
                                                    <t t-esc="doc.gender"/>
                                                </p>
                                                <p>Age:
                                                    <t t-esc="doc.age"/>
                                                </p>
                                            </h6>
                                        </div>
                                    </div>
                                </t>
                            </div>
                        </div>
                    </t>
                </div>
            </div>
        </t>
    </template>
</odoo>
