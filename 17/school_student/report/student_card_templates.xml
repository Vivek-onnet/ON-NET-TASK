<odoo>
    <!-- Header and Footer Layout Template -->
    <template id="hf_layout">
        <div class="header">
            <div class="row" style="report_header_style">
                <table style="width: 100%; border: 0pt solid white; border-radius: 10pt; padding: 20pt; margin-bottom: 40pt;">
                    <tr>
                        <td>
                            <div style="float: left;">
                                <img src="https://cdn-icons-png.flaticon.com/512/2602/2602414.png"
                                     alt="School Logo" height="50" width="50"/>
                                <h4>
                                    <strong>
                                        <t t-esc="doc.school_id.name"/>
                                    </strong>
                                </h4>
                            </div>
                            <div style="float: right; margin-top: 25pt;">
                                <h4>
                                    <strong>BONOFIED CERTIFICATE</strong>
                                </h4>
                            </div>
                        </td>
                    </tr>
                </table>
            </div>
        </div>

        <div class="footer o_standard_footer">
            <div class="row text-center" style="border-top: 0px solid white; margin-top: 0pt;">
                <div class="col-4">
                    <span class="float-start">
                        <t t-out="context_timestamp(datetime.datetime.now()).strftime('%d-%m-%Y %H:%M')"/>
                    </span>
                </div>
                <div class="col-4">
                    <span>
                    </span>
                </div>
                <div class="col-4">
                    <span class="float-end">Bonafide Certificate</span>
                </div>
            </div>
        </div>
    </template>

    <!-- Main Report Template -->
    <template id="student_card_pdf_template_report">
        <t t-call="web.basic_layout" t-lang="en_US">
            <t t-foreach="docs" t-as="doc">
                <!-- Start of a new page for each student -->
                <div class="page" style="page-break-after: always; overflow: hidden; margin-top: 0pt;
 background-image: url('https://i.postimg.cc/yY8Ks16q/certificate-border-for-excellence-performance-MA0-M62.jpg');
                            background-size: 730pt 470pt;
                            background-position: center;">
                    <!-- Call the header and footer layout -->
                    <!--    <strong><t t-esc="doc.school_id.name"/></strong>-->
                    <t t-call="school_student.hf_layout"/>

                    <!-- Main content -->
                    <div class="content"
                         style="border: 0pt solid white; border-radius: 10pt; padding: 10pt; min-height: 420pt; ">

                        <div style="margin-top: 60pt;">
                            <!-- Left Side: Student Details -->
                            <div style="float: left; width: 80%; margin-top: 60pt; margin-left: 60pt;">
                                <!--                                <strong>-->
                                <!--                                    <h2  style="float: center;">Student Information</h2>-->
                                <!--                                </strong>-->
                                <h3>
                                    <p style="text-align: justify; font-size: 12pt; font-family: sans-serif;">
                                        This is to certify that
                                        <strong>
                                            <t t-esc="doc.name"/>
                                        </strong>
                                        ,
                                        bearing roll number
                                        <strong>
                                            <t t-esc="doc.roll_no"/>
                                        </strong>
                                        ,
                                        is a bonafide student of
                                        <strong>
                                            <t t-esc="doc.school_id.name"/>
                                        </strong>
                                        .
                                        He/She is currently enrolled in
                                        <strong>
                                            Virtual Class
                                        </strong>
                                        .
                                        The student resides at
                                        <strong>
                                            <t t-esc="doc.school_address"/>
                                        </strong>
                                        and is
                                        <strong>
                                            <t t-esc="doc.gender"/>
                                        </strong>
                                        with an age of
                                        <strong>
                                            <t t-esc="doc.age"/>
                                        </strong>
                                        .
                                    </p>
                                    <p style="text-align: justify; font-size: 12pt; font-family: sans-serif;">
                                        This certificate is issued upon the student's request.
                                    </p>

                                    <a style=" float: right; text-align: justify; font-size: 12pt; font-family: sans-serif;">
                                        <strong>Principal</strong>
                                        <br/>
                                        <strong>
                                            <t t-esc="doc.school_id.name"/>
                                        </strong>
                                    </a>

                                </h3>
                            </div>

                            <!-- Right Side: Student Image -->
                            <!--                            <div style="float: right; width: 35%; margin-top: 20pt; margin-left: 10pt; text-align: center;">-->
                            <!--                                <img t-if="doc.image"-->
                            <!--                                     style="max-height: 150pt; max-width: 150pt; border-radius: 8pt; margin-bottom: 5pt;"-->
                            <!--                                     t-att-src="image_data_uri(doc.image)"-->
                            <!--                                     alt="Student Image"/>-->
                            <!--                            </div>-->
                        </div>
<br/> <br/>
                        <!-- Bottom: Certified Stamp and QR Code -->
                        <div style="clear: both; position: relative; height: 120pt; margin-top: 10pt; margin-left: 40pt; width: 90%;">

                            <div style="position: absolute;top: 1; bottom: 0; right: 0;">
                                <img src="https://clipart-library.com/images/pi5rEka4T.png"
                                     alt="Certified"
                                     style="height: 130pt; width: 130pt;"/>
                                <img src="https://static.vecteezy.com/system/resources/thumbnails/021/432/974/small/certified-grunge-rubber-stamp-free-png.png"
                                     alt="Certified"
                                     style="height: 130pt; width: 130pt;"/>
                            </div>
                            <div style="position: absolute; bottom: 0; left: 0;">
                                <img t-att-src="'/report/barcode/?barcode_type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('QR', doc.name, 120, 120)"
                                     style="border: 1pt solid black; border-radius: 2pt;"/>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- End of page for the student -->
            </t>
        </t>
    </template>

    <!-- Paper Format Record -->
    <record id="student_custom_report_paperformat" model="report.paperformat">
        <field name="name">Student Report Paper Format</field>
        <field name="format">A4</field>
        <field name="default" eval="False"/>
        <field name="orientation">Landscape</field>
        <field name="margin_top">25</field>
        <field name="margin_bottom">20</field>
        <field name="margin_left">10</field>
        <field name="margin_right">10</field>
        <field name="dpi">70</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">25</field>
    </record>

    <!-- Report Action Record -->
    <record model="ir.actions.report" id="student_card_pdf_report">
        <field name="name">Student Card Print</field>
        <field name="model">school.student</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">school_student.student_card_pdf_template_report</field>
        <field name="report_file">school_student.student_card_pdf_template_report</field>
        <field name="print_report_name">'Student-CARD'</field>
        <field name="binding_model_id" ref="school_student.model_school_student"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="school_student.student_custom_report_paperformat"/>
    </record>
</odoo>
