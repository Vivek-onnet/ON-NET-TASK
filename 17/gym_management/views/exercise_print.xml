<odoo>
    <data>
        <template id="exercise_pdf_report">
            <t t-call="web.external_layout">
                <t t-foreach="docs" t-as="doc">
                    <div class="page">
                        <main> <!-- Add the <main> tag here -->
                            <h1>Exercise:
                                <t t-esc="doc.name"/>
                            </h1>
                            <table class="table table-bordered">
                                <tr>
                                    <th>Body Part</th>
                                    <td>
                                        <t t-esc="doc.body_part"/>
                                    </td>
                                </tr>
                                <tr>
                                    <th>Equipment</th>
                                    <td>
                                        <t t-esc="doc.equipment"/>
                                    </td>
                                </tr>
                                <tr>
                                    <th>Sets</th>
                                    <td>
                                        <t t-esc="doc.sets"/>
                                    </td>
                                </tr>
                                <tr>
                                    <th>Repeat</th>
                                    <td>
                                        <t t-esc="doc.repeat"/>
                                    </td>
                                </tr>
                            </table>

                            <h2>Exercise Steps</h2>
                            <p>
                                <span>
                                    <t t-esc="doc.steps"/>
                                </span>
                            </p>

                            <h2>Benefits</h2>
                            <p>
                                <span>
                                    <t t-esc="doc.benefits"/>
                                </span>
                            </p>


                        </main> <!-- Closing the <main> tag -->
                    </div>
                </t>
            </t>
        </template>

        <record model="ir.actions.report" id="exercise_pdf_reports_action">
            <field name="name">Exercise Report</field>
            <field name="model">gym_management.exercise</field> <!-- Correct model reference here -->
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">gym_management.exercise_pdf_report</field>
            <field name="report_file">gym_management.exercise_pdf_report</field>
            <field name="print_report_name">'Exercise-Report'</field>
            <field name="binding_model_id" ref="model_gym_management_exercise"/> <!-- Correct model binding here -->
            <field name="binding_type">report</field>
        </record>
    </data>
</odoo>
