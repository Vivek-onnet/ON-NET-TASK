<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <record id="view_hospital_patient_tree" model="ir.ui.view">
        <field name="name">hospital.patient.tree</field>
        <field name="model">hospital.patient</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree sample="1">
                <field name="name" string="Patient Name"></field>
                <field name="date_of_birth" ></field>
<!--                <field name="appointment_id" ></field>-->

                <field name="age"></field>
                <field name="gender"></field>
                <field name="address"></field>
                <field name="phone"></field>
            </tree>
        </field>
    </record>

    <record id="view_hospital_patient_form" model="ir.ui.view">
        <field name="model">hospital.patient.form</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="image" widget="image" class="oe_avatar"></field>
                    <group>
                <group>
                    <field name="name"></field>
                    <field name="date_of_birth" ></field>

                    <field name="age"></field>
                    <field name="active" invisible="1"></field>
                    <field name="tag_id" widget="many2many_tags" options="{'color_field': 'color_picker'}"></field>

                </group>
                    <group>
                <field name="appointment_id" ></field>

                        <field name="gender"></field>
                        <field name="address"></field>
                        <field name="phone"></field>



                    </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="message_ids"/>
                    <field name="activity_ids"/>
                    </div>
            </form>
        </field>

    </record>

    <record id="view_hospital_patient_search" model="ir.ui.view">
        <field name="name">hospital.patient.search</field>
        <field name="model">hospital.patient</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search>

                <field name="name" filter_domain=" ['|','|'('name', 'ilike', self), ('age', 'ilike', self), ('gender', 'ilike', self), ('address', 'ilike', self), ('phone', 'ilike', self) ]" string="Patient Name"></field>
                <field name="date_of_birth"></field>
                <field name="age"></field>
                <field name="appointment_id" ></field>

                <field name="gender"></field>
                <field name="address"></field>
                <field name="phone"></field>
                <filter name="filter_male" domain="[('gender', '=', 'male')]" string="Male"></filter>
                <filter name="filter_female" domain="[('gender', '=', 'female')]" string="Female"></filter>

<!--                <filter name="filter_kids" string="Kids" domain="[('age', '=', '5')]" ></filter>-->
                <separator></separator>


                <separator></separator>

                <filter name="filter_archived" string="Archived" domain="[('active', '=', False)]" ></filter>

                <group expand="0" string="Group by">
                <filter string="Gender"  name="group_by_gender" context="{'group_by': 'gender'}"></filter>

                </group>

               <searchpanel>
                        <field name="gender" string="Categories" icon="fa fa-users" select="multi" enable_counters="1"/>
                    </searchpanel>
            </search>

        </field>
    </record>



    <record id="view_hospital_patient_kanban" model="ir.ui.view">
            <field name="name">hospital.patient.kanban</field>
            <field name="model">hospital.patient</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile">
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_content oe_kanban_global_click">

                                <div class="row">
                                    <div class="col-6">
                                        <strong>Name : </strong>
                                        <field name="name" string="Patient Name"/>
                                    </div>


                                    <div class="col-8">
                                        <strong>DOB : </strong>
                                        <field name="date_of_birth"/>
                                    </div>

                                    <div class="col-6">
                                        <strong>Age : </strong>
                                        <field name="age">Age</field>
                                    </div>

                                    <div class="col-6">
                                        <span class="float-end"><field name="image" widget="image" class="oe_avatar"></field>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>


