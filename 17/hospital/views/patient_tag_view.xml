<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <record id="view_patient_tag_tree" model="ir.ui.view">
        <field name="model">patient.tag.tree</field>
        <field name="model">patient.tag</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"></field>
                <field name="active" ></field>
<!--                                <field name="color_picker" widget="color_picker" string="Color Picker" groups="base.group_no_one"  ></field>-->
                <field name="color" widget="color"  ></field>
            </tree>
        </field>
    </record>

    <record id="view_patient_tag_form" model="ir.ui.view">
        <field name="model">patient.tag.form</field>
        <field name="model">patient.tag</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                            <group>
                    <field name="name"></field>
                                <field name="color_picker" widget="color_picker" string="Color Picker" groups="base.group_no_one"  ></field>
                    <field name="color" widget="color"  ></field>



                </group>
                <group>
                <field name="active" widget="boolean_toggle"></field>
                </group>
                    </group>
                </sheet>
            </form>
        </field>

    </record>

    <record id="action_patient_tag" model="ir.actions.act_window">
        <field name="name">Patient Tag</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">patient.tag</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
       <p class="o_view_nocontent_smiling_face"> Create a new patient tag detail..!!</p>
        </field>
    </record>

<menuitem id="menu_tags"
          name="Tags"
          action = 'action_patient_tag'
          parent = "menu_patient_tag"
          sequence = '0'/>

</odoo>