<odoo>
    <record id="view_cancel_invoice_wizard_form" model="ir.ui.view">
        <field name="name">cancel.invoice.wizard.form</field>
        <field name="model">cancel.invoice.wizard</field>
        <field name="arch" type="xml">
                <form string="Cancel Invoices Wizard">
                <group>
                    <field name="partner_id" readonly="1" context="{'form_view_ref': 'view_partner_form_gym_management_form'}"/>
                </group>
                    <notebook>
                        <page string="Membership" name="membership">
                            <field name="selected_member_lines">
                                <!-- Tree view for the membership lines -->
                                <tree string="Memberships" editable="bottom" create="false" delete="false">
                                    <field name="account_invoice_id"
                                           context="{'form_view_ref': 'account.view_move_form'}"
                                           on_change="1"/>
                                    <field name="membership_id" context="{'form_view_ref': 'view_gym_membership'}"/>
                                    <field name="state"/>

                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <footer>
                    <button string="Pay Selected Invoices" type="object" name="action_payment_selected_invoices" class="btn-primary"/>
                    <button string="Cancel Selected Invoices" type="object" name="action_cancel_selected_invoices" class="btn-secondary"/>
                    <button string="Close" class="btn-secondary" special="cancel"/>
<!--                    <button string="con" class="btn-secondary"   type="object" name="con"/>-->
                </footer>
            </form>
        </field>
    </record>

    <record id="action_membership_invoice_wizard" model="ir.actions.act_window">
        <field name="name">Cancel Invoices Wizard</field>
        <field name="res_model">cancel.invoice.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'default_partner_id': active_id}</field>
    </record>
</odoo>
