<odoo>


    <record id="workout_plan_form_view" model="ir.ui.view">
        <field name="name">workout.plan.form.view</field>
        <field name="model">workout_plan</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>

                <sheet>
                    <h1>
                        <field name="name" string="Name"/>
                    </h1>
                    <field name="description"/>

                    <label for="w_days_id" string='Workout Days :'/>
                    <field name="w_days_id" widget="many2many_tags" />

                    <br/>
                    <br/>
                    <notebook>
                        <page string="Schedule" id="page1">
                            <group>
                                <group>
                                    <field name="workout_days_id">
                                        <tree>
                                            <field name="name"/>
                                            <field name="body_part"/>
                                            <field name="equipment"/>
                                            <field name="sets"/>
                                            <field name="repeat"/>
                                        </tree>
                                        <form>
                                            <group>
                                                <group>
                                                    <field name="body_part"/>
                                                    <field name="equipment"/>
                                                </group>
                                                <group>
                                                    <field name="sets"/>
                                                    <field name="repeat"/>
                                                </group>
                                            </group>
                                        </form>
                                    </field>
                                </group>
                            </group>

                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>


    <record id="workout_plan_kanban_view" model="ir.ui.view">
        <field name="name">workout.plan.kanban.view</field>
        <field name="model">workout_plan</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
            <h3>
                <field name="name" string="Exercise"/>
            </h3>

                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <span>
                                            <h3>
                                                <field name="name"/>
                                            </h3>
                                        </span>
                                    </strong>
                                    <br/>
                                    <span>
                                        <field name="w_days_id" string="Days"/>
                                    </span>

                                    <!-- Optionally, you can add an image field for exercises -->
                                    <span>
                                        <!--                                <field name="image_1920" widget="image" class="oe_avatar"-->
                                        <!--                                       options="{'preview_image': 'image_128'}" field_id="image_1920_0"/>-->
                                    </span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
        </kanban>
    </field>
</record>


    <record id="workout_plan_tree_view" model="ir.ui.view">
        <field name="name">workout.plan.tree.view</field>
        <field name="model">workout_plan</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="workout_days_id"/>
                </tree>
            </field>
        </record>


    <record id="workout_plan_search_view" model="ir.ui.view">
        <field name="name">workout_plan.search.view</field>
        <field name="model">workout_plan</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Name"/>
            </search>
        </field>
    </record>

    <!-- actions opening views on models -->

        <record id="action_workout_plan_windows"
                model="ir.actions.act_window"> <!--  model="ir.actions.act_window" use for define action of view -->
            <field name="name">Workout Plan</field>
        <field name="res_model">workout_plan</field>
            <field name="view_mode">kanban,tree,form</field>
        </record>

</odoo>