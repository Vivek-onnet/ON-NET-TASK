<odoo>


    <record id="exercise_form_view" model="ir.ui.view">
        <field name="name">exercise.form.view</field>
    <field name="model">exercise</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>

                <sheet>
                               <h1> <field name="name" string="Name"/></h1>
                    <br/>
                    <br/>
                        <group>
                            <group>
                                <field name="body_part"/>
                                <field name="equipment"/>
                            </group>
                            <group>
                                <field name="sets"/>
                                <field name="repeat"/>
                            </group>
                        </group>
                    <notebook>
                        <page string="Exercise Steps" id="page1">
                            <field name="steps"/>

                        </page>
                        <page string="Benefits" id="page1">
                            <field name="benefits"/>

                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>


   <record id="view_gym_exercise_kanban" model="ir.ui.view">
    <field name="name">view.gym.exercise.kanban</field>
    <field name="model">exercise</field>
    <field name="arch" type="xml">
        <kanban class="o_kanban_mobile">
            <h3>
                <field name="name" string="Exercise"/>
            </h3>
            <field name="body_part"/>
            <field name="equipment"/>
            <field name="sets"/>
            <field name="repeat"/>

            <templates>
                <t t-name="kanban-box">
                    <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                        <div class="o_kanban_record_top">
                            <div class="o_kanban_record_headings">
                                <strong class="o_kanban_record_title">
                                    <span>
                                        <h3>
                                            <field name="name"/>
                                        </h3>
                                    </span>
                                </strong>
                                <br/>
                                <span>
                                    <div class="o_kanban_record_body">
                                        <i class="fa fa-bullseye" role="img" aria-label="Body Part" title="Body Part"/>
                                        <strong> Body Part: </strong>
                                        <field name="body_part"/>
                                    </div>
                                </span>
                                <br/>
                                <div class="o_kanban_record_body">
                                    <i class="fa fa-dumbbell" role="img" aria-label="Equipment" title="Equipment"/>
                                    <strong> Equipment: </strong>
                                    <field name="equipment"/>
                                </div>
                                <br/>
                                <div class="o_kanban_record_body">
                                    <i class="fa fa-repeat" role="img" aria-label="Sets" title="Sets"/>
                                    <strong> Sets: </strong>
                                    <field name="sets"/>
                                </div>
                                <div class="o_kanban_record_body">
                                    <i class="fa fa-refresh" role="img" aria-label="Reps" title="Reps"/>
                                    <strong> Reps: </strong>
                                    <field name="repeat"/>
                                </div>
                            </div>

                            <!-- Optionally, you can add an image field for exercises -->
                            <span>
<!--                                <field name="image_1920" widget="image" class="oe_avatar"-->
<!--                                       options="{'preview_image': 'image_128'}" field_id="image_1920_0"/>-->
                            </span>
                        </div>
                    </div>
                </t>
            </templates>
        </kanban>
    </field>
</record>


    <record id="exercise_tree_view" model="ir.ui.view">  <!-- model="ir.ui.view" use for define view -->
            <field name="name">exercise.tree.view</field>
    <field name="model">exercise</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="body_part"/>
                    <field name="equipment"/>
                    <field name="sets"/>
                    <field name="repeat"/>
                </tree>
            </field>
    </record>


    <record id="exercise_search_view" model="ir.ui.view">
        <field name="name">exercise.search.view</field>
        <field name="model">exercise</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Exercise Name"/>
                <field name="body_part"/>
                <field name="equipment"/>
                <separator></separator>

                <group expand="0" string="Group By">
                    <filter name="group_body_part" string="Body Part" context="{'group_by': 'body_part'}"/>
                    <filter name="group_equipment" string="Equipment" context="{'group_by': 'equipment'}"/>
                </group>
            </search>
        </field>
    </record>

<!--     actions opening views on models -->
<!--      model="ir.actions.act_window" use for define action of view -->
    <record id="action_exercise_windows" model="ir.actions.act_window">
        <field name="name">Exercise</field>
        <field name="res_model">exercise</field>
        <!-- res_model name should be also same as DATABASE table name -->
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{"search_default_group_body_part": 1}</field>

    </record>

</odoo>