<odoo>
    <data noupdate="0">
        <!-- Workout Plan for Push Day -->

        <record id="workout_plan_push" model="workout_plan">
            <field name="name">Push Workout For Beginner</field>
            <field name="description">
                <![CDATA[
                    <p><strong>Push Workout</strong> focuses on exercises targeting the chest, shoulders, and triceps.</p>
                    <ul>
                        <li>Push-Ups: 3 sets of 10 reps</li>
                        <li>Dumbbell Chest Press: 3 sets of 10 reps</li>
                        <li>Dumbbell Shoulder Press: 3 sets of 10 reps</li>
                        <li>Lateral Raises: 3 sets of 12 reps</li>
                    </ul>
                    <p>Days: Monday, Thursday</p>
                ]]>
            </field>
            <field name="workout_days_id" eval="[(6, 0, [ref('exercise_push_ups'), ref('exercise_dumbbell_chest_press'), ref('exercise_dumbbell_shoulder_press'), ref('exercise_lateral_raises')])]"/>
            <field name="w_days_id" eval="[(6, 0, [ref('day_monday'), ref('day_thursday')])]"/>
        </record>

         <!-- Pull Workout Plan -->
        <record id="workout_plan_pull" model="workout_plan">
            <field name="name">Pull Workout For Beginner</field>
            <field name="description">
                <![CDATA[
                    <p><strong>Pull Workout</strong> focuses on exercises targeting the back, biceps, and forearms.</p>
                    <ul>
                        <li>Bodyweight Rows: 3 sets of 10 reps</li>
                        <li>Dumbbell Rows: 3 sets of 10 reps</li>
                    </ul>
                    <p>Days: Tuesday, Friday</p>
                ]]>
            </field>
            <field name="workout_days_id" eval="[(6, 0, [ref('exercise_bodyweight_back'), ref('exercise_dumbbell_rows')])]"/>
            <field name="w_days_id" eval="[(6, 0, [ref('day_tuesday'), ref('day_friday')])]"/>
        </record>

         Leg Workout Plan
        <record id="workout_plan_legs" model="workout_plan">
            <field name="name">Leg Workout For Beginner</field>
            <field name="description">
                <![CDATA[
                    <p><strong>Leg Workout</strong> focuses on exercises targeting the quads, hamstrings, and calves.</p>
                    <ul>
                        <li>Squats: 3 sets of 10 reps</li>
                        <li>Lunges: 3 sets of 10 reps</li>
                    </ul>
                    <p>Days: Wednesday, Saturday</p>
                ]]>
            </field>
            <field name="workout_days_id" eval="[(6, 0, [ref('exercise_squats'), ref('exercise_lunges')])]"/>
            <field name="w_days_id" eval="[(6, 0, [ref('day_wednesday'), ref('day_saturday')])]"/>
        </record>

    </data>
</odoo>
