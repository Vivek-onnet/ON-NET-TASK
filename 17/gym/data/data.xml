<odoo>
    <data>

<!-- /////////////////////// DEMO DATA FOR EXERCISES ///////////////////////  -->
       <record id="exercise_push_ups" model="exercise">
            <field name="name">Push-Ups</field>
            <field name="body_part">Chest</field>
            <field name="equipment">Bodyweight</field>
            <field name="sets">2</field>
            <field name="repeat">12</field>
            <field name="benefits">Push-ups strengthen the chest, shoulders, triceps, and core muscles.</field>
            <field name="steps">
                <![CDATA[
                <ol>
                    <li>Get into a high plank position.</li>
                    <li>Lower your body until your chest nearly touches the floor.</li>
                    <li>Push yourself back up to the starting position.</li>
                </ol>
                ]]>
            </field>
        </record>

        <!-- Dumbbell Chest Press -->
        <record id="exercise_dumbbell_chest_press" model="exercise">
            <field name="name">Dumbbell Chest Press</field>
            <field name="body_part">Chest</field>
            <field name="equipment">Dumbbells</field>
            <field name="sets">3</field>
            <field name="repeat">10</field>
            <field name="benefits">The dumbbell chest press improves chest, shoulder, and triceps strength.</field>
            <field name="steps">
                <![CDATA[
                <ol>
                    <li>Lie on a flat bench holding a dumbbell in each hand.</li>
                    <li>Push the dumbbells above your chest, extending your arms fully.</li>
                    <li>Lower the dumbbells to chest level and repeat.</li>
                </ol>
                ]]>
            </field>
        </record>

        <!-- Bodyweight (Back) -->
        <record id="exercise_bodyweight_back" model="exercise">
            <field name="name">Bodyweight Rows</field>
            <field name="body_part">Back</field>
            <field name="equipment">Bodyweight</field>
            <field name="sets">2</field>
            <field name="repeat">12</field>
            <field name="benefits">Strengthens back muscles and improves posture.</field>
            <field name="steps">
                <![CDATA[
                <ol>
                    <li>Get into a plank position.</li>
                    <li>Pull one arm up towards your ribcage.</li>
                    <li>Alternate sides while maintaining a straight back.</li>
                </ol>
                ]]>
            </field>
        </record>

        <!-- Squats -->
        <record id="exercise_squats" model="exercise">
            <field name="name">Squats</field>
            <field name="body_part">Legs</field>
            <field name="equipment">Bodyweight</field>
            <field name="sets">3</field>
            <field name="repeat">15</field>
            <field name="benefits">Squats build strength in the lower body, targeting the quads, glutes, and hamstrings.</field>
            <field name="steps">
                <![CDATA[
                <ol>
                    <li>Stand with feet shoulder-width apart.</li>
                    <li>Lower your body into a sitting position, keeping your back straight.</li>
                    <li>Push back up to the starting position.</li>
                </ol>
                ]]>
            </field>
        </record>

        <!-- Lunges -->
        <record id="exercise_lunges" model="exercise">
            <field name="name">Lunges</field>
            <field name="body_part">Legs</field>
            <field name="equipment">Bodyweight</field>
            <field name="sets">3</field>
            <field name="repeat">10</field>
            <field name="benefits">Lunges improve lower body strength and balance, focusing on quads and hamstrings.</field>
            <field name="steps">
                <![CDATA[
                <ol>
                    <li>Stand with your feet together.</li>
                    <li>Step forward with one leg and lower your hips until both knees are bent at a 90-degree angle.</li>
                    <li>Push back up and return to the starting position.</li>
                </ol>
                ]]>
            </field>
        </record>

        <!-- Dumbbell Shoulder Press -->
        <record id="exercise_dumbbell_shoulder_press" model="exercise">
            <field name="name">Dumbbell Shoulder Press</field>
            <field name="body_part">Shoulders</field>
            <field name="equipment">Dumbbells</field>
            <field name="sets">3</field>
            <field name="repeat">10</field>
            <field name="benefits">The shoulder press strengthens the shoulder muscles and improves upper body strength.</field>
            <field name="steps">
                <![CDATA[
                <ol>
                    <li>Sit on a bench with a dumbbell in each hand, palms facing forward.</li>
                    <li>Press the weights overhead until your arms are fully extended.</li>
                    <li>Lower the weights back down to shoulder level.</li>
                </ol>
                ]]>
            </field>
        </record>

        <!-- Lateral Raises -->
        <record id="exercise_lateral_raises" model="exercise">
            <field name="name">Lateral Raises</field>
            <field name="body_part">Shoulders</field>
            <field name="equipment">Dumbbells</field>
            <field name="sets">3</field>
            <field name="repeat">12</field>
            <field name="benefits">Lateral raises target the shoulder muscles and improve upper body strength.</field>
            <field name="steps">
                <![CDATA[
                <ol>
                    <li>Stand with a dumbbell in each hand at your sides.</li>
                    <li>Lift the dumbbells to shoulder height, keeping your arms straight.</li>
                    <li>Lower the dumbbells back to your sides.</li>
                </ol>
                ]]>
            </field>
        </record>

        <!-- Dumbbell Rows -->
        <record id="exercise_dumbbell_rows" model="exercise">
            <field name="name">Dumbbell Rows</field>
            <field name="body_part">Back</field>
            <field name="equipment">Dumbbells</field>
            <field name="sets">3</field>
            <field name="repeat">12</field>
            <field name="benefits">Rows strengthen the upper back and improve posture.</field>
            <field name="steps">
                <![CDATA[
                <ol>
                    <li>Hold a dumbbell in each hand with your knees slightly bent.</li>
                    <li>Pull the dumbbells towards your chest, keeping your elbows close to your body.</li>
                    <li>Lower the dumbbells back down and repeat.</li>
                </ol>
                ]]>
            </field>
        </record>




    </data>
</odoo>
