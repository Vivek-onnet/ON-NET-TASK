<?xml version="1.0"?>
<odoo>

    <!-- Parent and Sub Category for Gym Groups -->
    <record model="ir.module.category" id="my_parent_category">
        <field name="name">Split Bill Parent Category</field>
    </record>

    <record model="ir.module.category" id="my_sub_group_category">
        <field name="name">Split Bill Sub Category</field>
        <field name="parent_id" ref="vpcs_split_invoice_and_bills.my_parent_category"/>
    </record>

    <!-- Security groups -->

    <record id="group_split_bill_user" model="res.groups">
        <field name="name">Split Bill User</field>
        <field name="category_id" ref="vpcs_split_invoice_and_bills.my_sub_group_category"/>
    </record>

    <record id="group_split_bill_admin" model="res.groups">
        <field name="name">Split Bill Admin</field>
        <field name="category_id" ref="vpcs_split_invoice_and_bills.my_sub_group_category"/>
        <field name="implied_ids" eval="[(6,0,[ref('vpcs_split_invoice_and_bills.group_split_bill_user')])]"/>
    </record>


    <!-- Model access for Split Invoice -->

    <record id="model_split_invoice_user_access" model="ir.model.access">
        <field name="name">split_invoice_user_access</field>
        <field name="model_id" ref="account.model_account_move"/>
        <field name="group_id" ref="vpcs_split_invoice_and_bills.group_split_bill_user"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="0"/>
        <field name="perm_create" eval="0"/>
        <field name="perm_unlink" eval="0"/>
    </record>

    <record id="model_split_invoice_admin_access" model="ir.model.access">
        <field name="name">split_invoice_admin_access</field>
        <field name="model_id" ref="account.model_account_move"/>
        <field name="group_id" ref="vpcs_split_invoice_and_bills.group_split_bill_admin"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="1"/>
    </record>


</odoo>
