<odoo>
    <!-- Subject Menu and Tree View -->

    <record id="action_subject_tree" model="ir.actions.act_window">
        <field name="name">Subjects</field>
        <field name="res_model">admission.subject</field>
        <field name="view_mode">tree</field>
    </record>

    <record id="view_subject_tree" model="ir.ui.view">
        <field name="name">Subject Tree</field>
        <field name="model">admission.subject</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>


    <record id="action_standard_tree" model="ir.actions.act_window">
        <field name="name">Standards</field>
        <field name="res_model">admission.standard</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="view_standard_tree" model="ir.ui.view">
        <field name="name">Standard Tree</field>
        <field name="model">admission.standard</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="medium"/>
            </tree>
        </field>
    </record>

    <record id="view_standard_form" model="ir.ui.view">
        <field name="name">Standard Form</field>
        <field name="model">admission.standard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="medium"/>
                    </group>
                    <field name="subject_line_ids">
                        <tree>
                            <field name="subject_id"/>
                            <field name="teacher_ids"/>
                        </tree>
                    </field>
                </sheet>
            </form>
        </field>
    </record>


    <record id="action_registration_tree" model="ir.actions.act_window">
        <field name="name">Registrations</field>
        <field name="res_model">admission.registration</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="view_registration_tree" model="ir.ui.view">
        <field name="name">Registration Tree</field>
        <field name="model">admission.registration</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="age"/>
                <field name="medium"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_registration_form" model="ir.ui.view">
        <field name="name">Registration Form</field>
        <field name="model">admission.registration</field>
        <field name="arch" type="xml">
             <form>
                <header>
                    <button name="action_start" string="Start" type="object" class="btn-primary"/>
                    <button name="action_confirm" string="Confirm" type="object" class="btn-success" invisible="state not in ['in_progress']"/>
                    <button name="action_reject" string="Reject" type="object" class="btn-danger" invisible="state not in ['in_progress']"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="date_of_birth"/>
                        <field name="age" readonly="1"/>
                        <field name="medium"/>
                        <field name="standard_id"/>

                    </group>
                    <field name="fee_line_ids">
                        <tree>
                            <field name="product_id"/>
                            <field name="quantity"/>
                            <field name="untaxed_amount"/>
                            <field name="total_amount"/>
                        </tree>
                    </field>
                    <notebook>
                    <page string="Subjects">
                        <field name="subject_ids"/>
                    </page>
                    <page string="Teachers">
                        <field name="teacher_ids"/>
                    </page>
                    </notebook>

                </sheet>
            </form>
        </field>
    </record>

    <!-- Registration Menu and Views -->
    <menuitem id="menu_admission" name="Admission" sequence="5" />

    <menuitem id="menu_registration" name="Registrations" parent="menu_admission" action="action_registration_tree" sequence="10"/>

    <menuitem id="menu_admission_configuration" name="Configuration" parent="menu_admission" sequence="10"/>

    <menuitem id="menu_subject" name="Subjects" parent="menu_admission_configuration" action="action_subject_tree" sequence="10"/>

    <!-- Standard Menu and Views -->
    <menuitem id="menu_standard" name="Standards" parent="menu_admission_configuration" action="action_standard_tree" sequence="20"/>

</odoo>
