<odoo>
    <data>
        <!--  After making view, ADD it in menu   &  ADD data field of manifest file    -->
        <!-- list/tree view definition -->

        <record id="school_tree_view" model="ir.ui.view">  <!-- model="ir.ui.view" use for define view -->
            <field name="name">school.tree.view</field>
            <field name="model">school.profile</field>   <!-- model name  should be same as DATABASE table name -->
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="email"/>
                    <field name="phone"/>
                    <field name="virtual_class"/>
                    <field name="auto_rank"/>
                    <field name="result"/>
                    <field name="address"/>
                    <field name="establish_date"/>
                    <field name="open_date"/>
                    <field name="school_type"/>


                </tree>
            </field>
        </record>


        <!-- form view definition -->
        <record id="school_form_view" model="ir.ui.view">  <!-- model="ir.ui.view" use for define view -->
            <field name="name">school.form.view</field>
            <field name="model">school.profile</field>  <!--  model name  should be same as DATABASE table name -->
            <field name="arch" type="xml">
                <form>
                            <header>
<!--                                <button name="read_orm" string="check orm" type="object" class="oe_highlight"/>-->

                            </header>
                    <sheet>
                    <notebook>
                    <page string="School Information" id="page1">
                        <group>
                            <group>
                                <field name="name" string="Name"/>
                                <field name="email" string="Email" default="abc@gmail.com" required="1"/>
                                <field name="auto_rank"/>
                                <field name="result" string="Result"/>
                                <field name="phone" string="Phone"/>
                                <field name="address"
                                       string="School Address"/> <!-- also use as widget="html" for text editor -->

                                <field name="city"
                                       string="School City"/>  <!-- just add fields in xml view of inherited model as normally added. -->

                                <field name="description" string="Description"/>
<!--                                <field name="school_number" string="School No"/>-->

                            </group>
                            <group>
                                <field name="image" widget="image" string="Upload Image"
                                       help="Upload Your School Image"/>
                                <field name="school_type" string="School Type"/>


                                <field name="establish_date" string="Establishment Date"/>
                                <field name="open_date" string="Opening Date"/>
                                <field name="virtual_class" string="Virtual Class"/>
                                <field name="document" string="Document" filename="document_name"/>
                                <field name="document_name" invisible="1"/>
                                <field name="ref_id" />
                            </group>
                        </group>

                    </page>
                    </notebook>
                    </sheet>
                </form>
            </field>
        </record>


        <!-- actions opening views on models -->

        <record id="action_school_profile"
                model="ir.actions.act_window"> <!--  model="ir.actions.act_window" use for define action of view -->
            <field name="name">School Profile</field>
            <field name="res_model">school.profile</field> <!-- res_model name should be also same as DATABASE table name -->
            <field name="view_mode">tree,form</field>
        </record>


        <!-- Top menu item -->
        <menuitem name="School" id="school_root_menu" sequence="-100"/>

        <!-- menu categories -->
        <menuitem id="school_sub_menu" name="School Profile" parent="school_root_menu"/>

        <!-- actions -->
        <menuitem id="school_profile_menu" name="Profile" parent="school_sub_menu" action="action_school_profile"/>

    </data>
</odoo>
