<odoo>

        <!-- Use case : we use security.XML for stop to reload every time when we have done any changes in module. If we use this security.XML then it will not reload every time.    -->
        <!--                  if we use ir.model.access.XML then it will reload every time.   -->
    <data noupdate="0">

    <record model="ir.module.category" id="access_school_user_group_category">
        <field name="name">School Profile</field>
    </record>

    <record model="res.groups" id="access_school_user_group">
        <field name="name">School Group</field>
        <field name="category_id" ref="school.access_school_user_group_category"/>
    </record>

     <record model="res.groups" id="access_student_user_group">
        <field name="name">old Student Group</field>
        <field name="category_id" ref="school.access_school_user_group_category"/>
    </record>

     <record model="res.groups" id="access_school_user_group_2">
        <field name="name">School Group 2</field>
        <field name="category_id" ref="base.module_category_hidden"/>
        <field name="implied_ids" eval="[(4, ref('analytic.group_analytic_accounting'))]"/>

    </record>

<!--    <record id="access_school_user" model="ir.model.access">-->
<!--        <field name="name">base user</field>-->
<!--        <field name="model_id" ref="model_school_profile"/>-->
<!--        <field name="group_id" ref="base.group_user"/>-->
<!--        <field name="perm_read">1</field>-->
<!--        <field name="perm_write">1</field>-->
<!--        <field name="perm_create">1</field>-->
<!--        <field name="perm_unlink">1</field>-->
<!--    </record>-->


    <record id="access_school_profile" model="ir.model.access">
        <field name="name">Access School Profile</field>
        <field name="model_id" ref="model_school_profile"/>
        <field name="group_id" ref="school.access_school_user_group"/>
        <field name="perm_read">1</field>
        <field name="perm_write">1</field>
        <field name="perm_create">1</field>
        <field name="perm_unlink">1</field>
    </record>

    <record id="access_for_school" model="ir.rule">
        <field name="name">Access School Profile1</field>
        <field name="model_id" ref="school.model_school_profile"/>
        <field name="domain_force">[('create_uid', '=', user.id)]</field>
        <field name="groups" eval="[(4,ref('school.access_school_user_group'))]"/>
    </record>


    <record model="ir.module.category" id="my_parent_category" >
        <field name="name">Student Parent Category</field>
    </record>


     <record model="ir.module.category" id="my_sub_group_category">
        <field name="name">Student Sub Category</field>
        <field name="parent_id" ref="school.my_parent_category"/>
    </record>



    <record model="res.groups" id="access_student_low_user_group">
        <field name="name">Student Low Level Group</field>
        <field name="category_id" ref="school.my_sub_group_category"/>
    </record>


    <record model="res.groups" id="access_student_mid_user_group">
        <field name="name">Student Mid Level Group</field>
        <field name="category_id" ref="school.my_sub_group_category"/>
        <field name="implied_ids" eval="[(6,0,[ref('school.access_student_low_user_group')])]"/>
    </record>


    <record model="res.groups" id="access_student_high_user_group">
        <field name="name">Student Admin Level Group</field>
        <field name="category_id" ref="school.my_sub_group_category"/>
        <field name="implied_ids" eval="[(6,0,[ref('school.access_student_mid_user_group')])]"/>
    </record>

<record id="access_school_low_user" model="ir.model.access">
        <field name="name">low user</field>
        <field name="model_id" ref="school.model_school_profile"/>
        <field name="group_id" ref="school.access_student_low_user_group"/>
        <field name="perm_read">1</field>
        <field name="perm_write">0</field>
        <field name="perm_create">0</field>
        <field name="perm_unlink">0</field>
    </record>

<record id="access_school_mid_user" model="ir.model.access">
        <field name="name">mid user</field>
        <field name="model_id" ref="school.model_school_profile"/>
        <field name="group_id" ref="school.access_student_mid_user_group"/>
        <field name="perm_read">1</field>
        <field name="perm_write">1</field>
        <field name="perm_create">1</field>
        <field name="perm_unlink">0</field>
    </record>

<record id="access_school_high_user" model="ir.model.access">
        <field name="name">high user</field>
        <field name="model_id" ref="school.model_school_profile"/>
        <field name="group_id" ref="school.access_student_high_user_group"/>
        <field name="perm_read">1</field>
        <field name="perm_write">1</field>
        <field name="perm_create">1</field>
        <field name="perm_unlink">1</field>
    </record>

    </data>
</odoo>